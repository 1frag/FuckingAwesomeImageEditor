<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorBackground1"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/clear_btn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:background="@color/White"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_clear"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:text="@string/clear"
        android:gravity="center"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/button_clear"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/button_clear"
        app:layout_constraintTop_toBottomOf="@+id/button_clear" />


    <ImageButton
        android:id="@+id/button_add_points"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="20dp"
        android:background="@color/White"
        android:contentDescription="@string/add_pnts"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_point"
        app:layout_constraintStart_toEndOf="@+id/button_clear"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/button_left"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:background="@color/White"
        android:contentDescription="@string/cd"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_navigate"
        app:layout_constraintStart_toEndOf="@+id/button_add_points"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/button_right"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@color/White"
        android:contentDescription="@string/cd"
        android:rotation="180"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_navigate"
        app:layout_constraintBottom_toBottomOf="@+id/button_left"
        app:layout_constraintStart_toEndOf="@+id/button_left"
        app:layout_constraintTop_toTopOf="@+id/button_left"
        app:layout_constraintVertical_bias="0.0" />

    <ImageButton
        android:id="@+id/button_up"
        android:layout_width="40dp"
        android:layout_height="38dp"
        android:layout_marginEnd="112dp"
        android:background="@color/White"
        android:contentDescription="@string/cd"
        android:rotation="90"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_navigate"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/button_down"
        android:layout_width="40dp"
        android:layout_height="38dp"
        android:background="@color/White"
        android:rotation="270"
        android:src="@drawable/ic_navigate"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="@+id/button_up"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/button_up"
        app:layout_constraintTop_toBottomOf="@+id/button_up"
        android:contentDescription="@string/cd"/>

    <Button
        android:id="@+id/button_start_splain"
        android:layout_width="79dp"
        android:layout_height="51dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:text="@string/start_algo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button_up"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view_filters"
        android:layout_width="match_parent"
        android:layout_height="76dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



</android.support.constraint.ConstraintLayout>