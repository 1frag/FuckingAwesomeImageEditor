<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="76dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/button_start_a_star"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="24dp"
        android:src="@drawable/ic_start"
        android:background="@color/White"
        app:layout_constraintStart_toEndOf="@+id/button_settings_a_star"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/set_start"/>

    <ImageButton
        android:id="@+id/button_finish_a_star"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:onClick="click_finish"
        android:src="@drawable/ic_finish"
        android:background="@color/White"
        app:layout_constraintStart_toEndOf="@+id/button_start_a_star"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/set_finish"/>

    <ImageButton
        android:id="@+id/button_set_wall"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:src="@drawable/ic_wall"
        android:background="@color/White"
        app:layout_constraintStart_toEndOf="@+id/button_finish_a_star"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/set_walls"/>

    <ImageButton
        android:id="@+id/button_settings_a_star"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/ic_settings"
        app:layout_constraintBottom_toBottomOf="@+id/button_start_a_star"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/button_start_a_star"
        android:contentDescription="@string/start_algo"/>

    <Button
        android:id="@+id/button_start_algo_a_star"
        android:layout_width="102dp"
        android:layout_height="60dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:text="@string/start_algo"
        app:layout_constraintEnd_toEndOf="@+id/view"
        app:layout_constraintStart_toEndOf="@+id/button_set_wall"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_set_start"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/set_start"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="@+id/button_start_a_star"
        app:layout_constraintStart_toStartOf="@+id/button_start_a_star"
        app:layout_constraintTop_toBottomOf="@+id/button_start_a_star" />

    <TextView
        android:id="@+id/text_set_finish"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/set_finish"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="@+id/button_finish_a_star"
        app:layout_constraintStart_toStartOf="@+id/button_finish_a_star"
        app:layout_constraintTop_toBottomOf="@+id/button_finish_a_star" />

    <TextView
        android:id="@+id/text_set_wall"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/set_walls"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="@+id/button_set_wall"
        app:layout_constraintStart_toStartOf="@+id/button_set_wall"
        app:layout_constraintTop_toBottomOf="@+id/button_set_wall" />



</android.support.constraint.ConstraintLayout>