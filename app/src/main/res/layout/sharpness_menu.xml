<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <SeekBar
        android:id="@+id/seekbar_amount"
        android:layout_width="270dp"
        android:layout_height="30dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:thumbOffset="@dimen/cardview_default_radius"
        android:thumbTint="@color/colorAccent"
        app:layout_constraintStart_toEndOf="@+id/image_red_color"
        app:layout_constraintTop_toTopOf="parent" />

    <SeekBar
        android:id="@+id/seekbar_radius"
        android:layout_width="270dp"
        android:layout_height="30dp"
        android:layout_marginStart="8dp"
        android:thumbOffset="@dimen/cardview_default_radius"
        android:thumbTint="@color/saladGreen"
        app:layout_constraintStart_toEndOf="@+id/image_salad_color"
        app:layout_constraintTop_toBottomOf="@+id/seekbar_amount" />

    <SeekBar
        android:id="@+id/seekbar_threshold"
        android:layout_width="270dp"
        android:layout_height="30dp"
        android:layout_marginStart="8dp"
        android:thumbOffset="@dimen/cardview_default_radius"
        android:thumbTint="@color/colorPrimary"
        app:layout_constraintStart_toEndOf="@+id/image_pink_color"
        app:layout_constraintTop_toBottomOf="@+id/seekbar_radius" />

    <!--<View-->
        <!--android:id="@+id/view"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="100dp"-->
        <!--app:layout_constraintEnd_toEndOf="parent"-->
        <!--app:layout_constraintStart_toStartOf="parent"-->
        <!--app:layout_constraintTop_toTopOf="parent" />-->

    <ImageView
        android:id="@+id/image_red_color"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:background="@color/colorAccent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/image_salad_color"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="8dp"
        android:background="@color/saladGreen"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_red_color" />

    <ImageView
        android:id="@+id/image_pink_color"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="8dp"
        android:background="@color/colorPrimary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_salad_color" />

    <Button
        android:id="@+id/button_start_usm"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:text="Start ALGO"
        android:textSize="11sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/seekbar_radius"
        app:layout_constraintTop_toTopOf="parent" />


</android.support.constraint.ConstraintLayout>