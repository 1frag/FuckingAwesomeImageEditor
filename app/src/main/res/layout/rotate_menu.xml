    <ImageButton
        android:id="@+id/rotate90"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="12dp"
        android:src="@drawable/ic_rotate_90"
        android:background="@color/White"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/seekBar" />

    <Button
        android:id="@+id/reset_seekbar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="0"
        android:textColor="@color/colorAccent"
        android:background="@color/White"
        android:textSize="25sp"
        app:layout_constraintStart_toEndOf="@+id/rotate90"
        app:layout_constraintTop_toBottomOf="@+id/seekBar" />

    <ImageButton
        android:id="@+id/mirrorV"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_flip"
        android:textColor="@color/colorPrimary"
        android:textSize="25sp"
        android:background="@color/White"
        app:layout_constraintEnd_toStartOf="@+id/mirrorH"
        app:layout_constraintTop_toBottomOf="@+id/seekBar" />

    <ImageButton
        android:id="@+id/mirrorH"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_flip"
        android:rotation="90"
        android:textColor="@color/colorPrimary"
        android:textSize="25sp"
        android:background="@color/White"
        app:layout_constraintEnd_toEndOf="@+id/seekBar"
        app:layout_constraintTop_toBottomOf="@+id/seekBar" />

    <Button
        android:id="@+id/apply"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:text="APPLY"
        android:textColor="@color/darkGrey"
        android:textSize="23sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.384"
        app:layout_constraintStart_toEndOf="@+id/seekBar"
        app:layout_constraintTop_toTopOf="parent" />


    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_view_angle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="Angle: 0"
        android:textSize="25sp"
        app:layout_constraintEnd_toStartOf="@+id/mirrorV"
        app:layout_constraintStart_toEndOf="@+id/reset_seekbar"
        app:layout_constraintTop_toBottomOf="@+id/seekBar" />


